<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCalendario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    tools:context=".menu.ui.home.HomeFragment">

    <!-- Calendario -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/materialCalendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mcv_arrowColor="#64B5F6"
        app:mcv_dateTextAppearance="@style/CalendarDateTextDark"
        app:mcv_headerTextAppearance="@style/CalendarHeaderTextDark"
        app:mcv_selectionColor="#1976D2"
        app:mcv_showOtherDates="none"
        app:mcv_weekDayTextAppearance="@style/CalendarWeekDayTextDark" />

    <!-- Botón "Hoy" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHoy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#1976D2"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="@string/hoy"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/materialCalendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnConfirmarFecha"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Botón "Confirmar fecha" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmarFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#1976D2"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="@string/confirmar_fecha"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/materialCalendarView"
        app:layout_constraintStart_toEndOf="@id/btnHoy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <!-- TextView de error oculto -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvErrorCalendario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="#332020"
        android:padding="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="#E57373"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHoy" />

</androidx.constraintlayout.widget.ConstraintLayout>
