<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:padding="16dp"
    tools:context=".menu.ui.slideshow.RegistrarPagoFormFragment">

    <LinearLayout
        android:id="@+id/layoutPrincipalRegistroPagoForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardRegistroPagoForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:padding="20dp">

            <!-- Spinner: Métodos de pago -->
            <Spinner
                android:id="@+id/spMetodosDePagoRegistroPagoForm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:backgroundTint="#64B5F6"
                android:popupBackground="#1C1F26"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Campo Fecha -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutFechaPagoRegistroPagoForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/fecha_del_pago"
                app:hintTextColor="#9EADC2"
                app:boxStrokeColor="#1976D2"
                app:boxBackgroundMode="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spMetodosDePagoRegistroPagoForm">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaPagoForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:drawableEnd="@drawable/agenda"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#9EADC2" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Precio -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPrecioPagoRegistroPagoForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/monto_pagado"
                app:hintTextColor="#9EADC2"
                app:boxStrokeColor="#1976D2"
                app:boxBackgroundMode="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutFechaPagoRegistroPagoForm">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecioPagoForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#9EADC2" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btGuardarRegistroPagoForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/registrar_pago"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                app:backgroundTint="#1976D2"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutPrecioPagoRegistroPagoForm" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- TextView de error -->
        <TextView
            android:id="@+id/tvErrorRegistrarPagoForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#332020"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#EF5350"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
