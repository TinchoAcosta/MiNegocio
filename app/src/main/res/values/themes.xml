<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MiNegocio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color de acento (reemplaza el rosado por celeste) -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Este es importante: reemplaza el "accent" antiguo que algunos widgets aÃºn usan -->
        <item name="colorAccent">@color/blue_light</item>

        <!-- Fondo general -->
        <item name="android:colorBackground">@color/gray_bg_dark</item>

        <!-- Botones -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Estilo para campos de texto -->
    <style name="CustomTextInputLayoutDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/gray_card</item>
        <item name="boxStrokeColor">@color/blue_dark</item>
        <item name="hintTextColor">#9EADC2</item>
        <item name="android:textColorHint">#9EADC2</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="endIconTint">@color/blue_light</item>
    </style>

    <!-- Estilos de texto para calendario -->
    <style name="CalendarHeaderTextDark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayTextDark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#9EADC2</item>
    </style>

    <style name="CalendarDateTextDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <!-- Botones -->
    <style name="CustomButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Derivados del tema -->
    <style name="Theme.MiNegocio" parent="Base.Theme.MiNegocio" />

    <style name="Theme.MiNegocio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiNegocio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MiNegocio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
